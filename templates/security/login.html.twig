{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="card p-3 couleurfondcard " style="max-width: 600px; width: 100%;" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label class="mb-2" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3 couleurfonddiv" autocomplete="email" required autofocus>
    <label class="mb-2" for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control mb-3 couleurfonddiv" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="form-check form-switch input-group mb-3">
        <div class="form-check">
            <input type="checkbox" name="_remember_me" class="form-check-input">
            <label class="form-check-label">
                Se souvenir de moi
            </label>
        </div>
    </div>
    <div class="d-flex justify-content-center">
    <button class="btn custom-btn mb-3 mx-3" type="submit">
        Sign in
    </button>
    <a href="{{ path('app_register') }}" class="btn custom-btn mb-3 mx-3" type="button">
        Sign up
    </a>
        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
    </div>
</form>
{% endblock %}
